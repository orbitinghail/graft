#!/usr/bin/env bash
set -euo pipefail

USAGE=$(
    cat <<EOF
Usage: $0 [OPTIONS]

Options:
  --client ID   Specify an ID to identify this client. Default = "default"
  --release     Build/run in release mode.
  --trace       Enable trace-level logging for graft.
  --log PATH    Output logs to a file
  --gdb         Run sqlite3 under gdb debugger.
  --autosync    Enable automatic background sync.
EOF
)

GIT_ROOT="$(git rev-parse --show-toplevel)"

TARGET="debug"
BUILD_FLAGS=""

GDB=${GDB:-0}
export RUST_LOG=${RUST_LOG:-warn}

CLIENT_ID="default"
DATA_ROOT="${GIT_ROOT}/.graft"

# parse flags
while [[ $# -gt 0 ]]; do
    case $1 in
        --client)
            shift
            CLIENT_ID="$1"
            shift
            ;;
        --release)
            shift
            TARGET="release"
            BUILD_FLAGS="--release"
            ;;
        --trace)
            shift
            export RUST_LOG="graft_sqlite=trace,graft_kernel=trace"
            ;;
        --log)
            shift
            export GRAFT_LOG_FILE="$1"
            export NO_COLOR=1
            shift
            ;;
        --gdb)
            shift
            export GDB=1
            ;;
        --autosync)
            shift
            export GRAFT_AUTOSYNC=1
            ;;
        *)
            echo "Unknown option: $1"
            echo "${USAGE}"
            exit 1
            ;;
    esac
done

export GRAFT_REMOTE__TYPE="fs"
export GRAFT_REMOTE__ROOT="${DATA_ROOT}/remote"
export GRAFT_DATA_DIR="${DATA_ROOT}/clients/${CLIENT_ID}"

mkdir -p "${GRAFT_REMOTE__ROOT}" "${GRAFT_DATA_DIR}"

cargo build ${BUILD_FLAGS} --features precept/disabled --package graft-sqlite-extension

# Discover the path to the VFS depending on platform
LIB_PATH="${GIT_ROOT}/target/${TARGET}"
if [[ "$OSTYPE" == "msys" || "$OSTYPE" == "cygwin" ]]; then
    LIB_PATH="${LIB_PATH}/graft.dll"
elif [[ "$OSTYPE" == "darwin"* ]]; then
    LIB_PATH="${LIB_PATH}/libgraft.dylib"
else
    LIB_PATH="${LIB_PATH}/libgraft.so"
fi

ARGS=(
    -header
    -table
    -cmd '.log stderr'
    -cmd ".load '${LIB_PATH}'"
    -cmd ".open 'file:main?vfs=graft'"
)

exec just run sqlite bin "${ARGS[@]}"
